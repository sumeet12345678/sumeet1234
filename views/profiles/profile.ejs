    <script>                 
		    $(document).ready(function(){
				
				var modal = document.getElementById('PROFILE_IMAGE_SLIDER');
				
				var profileImage = document.getElementById("imgProfilePhoto");
				
				var span = document.getElementsByClassName("close")[0];
				
				profileImage.onclick = function() {
				    modal.style.display = "block";
				}				
				span.onclick = function() {
				    modal.style.display = "none";
				}
		 
			    window.onclick = function(event) {
			    if (event.target == modal) {
			        modal.style.display = "none";
			       }
		
			    }
				
				var myImage = document.getElementById("Img");
		
					var imageArray = ["/media/images/user_images/a.jpg","/media/images/user_images/b.jpg","/media/images/user_images/c.jpg",
					  "/media/images/user_images/d.jpg","/media/images/user_images/e.jpg","/media/images/user_images/f.jpg"];
		
					var imageIndex = 0; 
					myImage.setAttribute("src",imageArray[imageIndex]);
					
					function changeImage() {
					  imageIndex = (imageIndex + 1) % imageArray.length;
					  myImage.setAttribute("src",imageArray[imageIndex]);
					 
					}
					function changeImage1() {
					  imageIndex = (imageIndex - 1) % imageArray.length;
					  if(imageIndex == -1){
					  imageIndex = imageArray.length - 1;
					  }
					  myImage.setAttribute("src",imageArray[imageIndex]);
					 
					}
		
					//setInterval(changeImage, 2000);
					
					$('.next').click(function() {
						  changeImage();
						});
						
					$('.prev').click(function() {
					      changeImage1();
										
				    });								
						
				});  				
					 
