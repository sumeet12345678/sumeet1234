	<div id = PEOPLE_HOME class = "website-screen-width_dt"> 
				 
			  <div  id = PEOPLE_HOME_HEADER class = "earth-gradient-title-bar1111 green-gradient-bg">  
			       <table  width = "100%" height = "100%">    
			       	  <tr>  				  
				 	   <td tabindex="3" width="33.3333333%" align = left valign = middle style = "border-right111: 1px solid #fff">
				 		  <div id = PEOPLE_UPDATES  style = "cursor: pointer; display: inline-block; line-height: 100%;">Updates</div>
				 	   </td>
				 	   <td tabindex="4" width="33.33333333%" align = center valign = middle style = "border-right111: 1px solid #fff">
				 		  <div id = PEOPLE_FINDER_BTN style = "text-align:center; cursor: pointer; display: inline-block; line-height: 100%; ">Search</div>
				 	   </td>  
				 	   
				 	    <td tabindex="5" width="33.33333333%" align = right valign = middle style = "display: hidden;">
				 		   <div id = PEOPLE_CONNECTIONS_BTN style = "cursor: pointer;  display: inline-block; line-height: 100%;">Contagxonomy</div>  
				 	   </td>  
			 		  </tr>
		 		  	</table>
			  </div>	
				   
			<div id = PEOPLE_HOME_CONTENT_CONTAINER style = "padding-left: 2px; padding-right: 2px; height:100%;">
			
				<div id = "PEOPLE_HOME_UPDATES" class = "people-finder-child-div">
					  
				</div> 
				
				<div id = "PEOPLE_HOME_FINDER" class = "people-finder-child-div" style = "height: 100%; width: 100%; ">  
					<div id = "PEOPLE_SEARCH_CRITERIAS" style = "position: relative; height: 100%; overflow: auto;" >  
						
					</div>
					
				</div>
				
				<div id = "PEOPLE_HOME_SAVED_FILTERS" class = "people-finder-child-div">
					
				</div>
				
				<div id = "PEOPLE_HOME_CONNECTIONS" class = "people-finder-child-div">
					
				</div>
				   
			</div> 
			
	 	
		     
	</div>
	  
	 
	<script>

	    var peopleSearchLoaded= false;
        var peopleUpdatesLoaded = false;

	    $('#PEOPLE_UPDATES').on('click', function() {
	    	$('.people-finder-child-div').hide();
	    	$('#PEOPLE_HOME_UPDATES').show();
			loadPeopleUpdates();
		});  
	      
	    function loadPeopleUpdates() {
	    	if (!peopleUpdatesLoaded) {
	    		showHideProgress();
	    		$.get('<%=urls.PEOPLE_URL%>/peopleUpdates', function(data) {
	    				$('#PEOPLE_HOME_UPDATES').append(data);
	    				peopleUpdatesLoaded = true;  
	    				showHideProgress();
	    		});
	    	}

	    }



	     
	    $('#PEOPLE_FINDER_ICON').on('click', function() {
			$('#PEOPLE_HOME').toggle();  
		});  
	     
	    
	    $('#PEOPLE_FINDER_BTN').on('click', function() {
		       
				//hide containers of all other buttons, then make an AJAX call for people_finder and insert
				$('.people-finder-child-div').hide();
				$('#PEOPLE_HOME_FINDER').show();
				loadPeopleSearch();	
				 
		});
	    
	    function loadPeopleSearch() { 
				 if(!peopleSearchLoaded) {
		    		showHideProgress();
				     $.get('<%=urls.PEOPLE_URL%>/peopleSearch', function(data){
					     $('#PEOPLE_SEARCH_CRITERIAS').append(data);
					     peopleSearchLoaded = true;
					     showHideProgress();
						});
				 }
		 } 

	    $('#PEOPLE_CONNECTIONS_BTN').on('click', function() {
	    
	    	loadContaxgonomy(function() {
		    		$('.people-finder-child-div').hide();  		
		    		$('#PEOPLE_HOME_CONNECTIONS').show();
		    		showContaxonomyModal("PEOPLE_APP" , "");
	    	}); //Ajax call  
	    	 
		});
	    
	
	</script>
	