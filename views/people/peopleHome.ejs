	<style>
					.green-gradient-bg {	  
	background: -webkit-linear-gradient(#344C15,#698A25 ); 
	background: -o-linear-gradient(#344C15,#698A25 ); 
	background: -moz-linear-gradient(#344C15,#698A25 );   
	background: linear-gradient(#344C15,#698A25 ); 
	min-height: 43px; 
	line-height: 43px;
	color: #fff;
}

		#PEOPLE_HOME {
			position: fixed;
			top: 45px;
			border: 1px solid #9b9b9b;	
			height111: calc(100% - 42px);
			margin-left: auto; 
			margin-right: auto;
			left: 0;
			right: 0;
			
		    z-index: 1100;
		    			 
			background-color: #f6f8fa;
			
			height: calc(100% - 45px);
			 
		}
		
		.people-finder-child-div {
			display: none;
			height: calc(100% - 85px);
		}
		  
		 
		  @media screen and (max-width: 767px) { 
			#PEOPLE_HOME {
				width: 99.5%;
		 }  
	 
  }  
